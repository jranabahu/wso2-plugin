<assembly>
    <id>dist</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <unpack>false</unpack>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>org.glassfish:javax.json</include>
                <include>com.smartbear:swagger4j</include>
                <include>com.wordnik:swagger-core</include>
                <include>com.wordnik:swagger-models</include>
                <include>org.apache.http*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <unpack>true</unpack>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>org.wso2:apiManager-plugin</include>
                <include>com.smartbear:soapui-swagger-plugin</include>
            </includes>
            <unpackOptions>
                <excludes>
                    <exclude>com\smartbear\swagger\PluginConfig.class</exclude>
                    <exclude>com\smartbear\swagger\*Action*.class</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/META-INF</outputDirectory>
            <includes>
                <include>LICENSE*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/assembly</directory>
            <outputDirectory>/META-INF</outputDirectory>
            <includes>
                <include>readme.txt</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>